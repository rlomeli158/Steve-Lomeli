@model FinalProjectWorkspace.Models.Genre

@{
    ViewData["Title"] = "Create";
}

<br />

<h1 class="text-center text-danger">Create Genre</h1>
<hr style="height:2px;border-width:0;color:#d0faff;background-color:#d0faff">
<br />
<h4>Genre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-controller="Genre" asp-action="Index">Go to Genres List</a>
    <a class="btn btn-outline-primary" asp-controller="Movie" asp-action="Index">Go to Movie Index</a>
</div>

