@model IEnumerable<FinalProjectWorkspace.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Genres</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.GenreID">Edit</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.GenreID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div>
    <a class="btn btn-outline-primary" asp-controller="Movie" asp-action="Index">Back to List</a>
</div>