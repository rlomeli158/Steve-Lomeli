<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><img src="~/Images/Main st. logo.png" width="80" height="80" alt="Main St. Movies' Logo" title="Main St. Movies' Logo"></a>
            </div>
            <div class="collapse navbar-collapse" id="nav-content">
                <ul class="navbar-nav mr-auto">
                    <!--The link to products is provided as an example.  You can add more links for additional pages-->
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Browse</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Account</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">PopcornPoints</a></li>
                </ul>
            </div>
            <div>
                <form asp -action="Index" asp-controller="Home" method="get">
                    <p class="form-group">
                        <input name="SearchString" class="form-control" />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </p>
                </form>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a asp-action="Register" asp-controller="Account" id="registerLink" class="nav-link">Register</a></li>
                <li><a asp-action="Login" asp-controller="Account" id="loginLink" class="nav-link">Log in</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper/popper.js/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>