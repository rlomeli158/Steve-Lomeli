<table class="table table-hover text-center" >
    <thead>
        <tr class="text-light text-center">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <!--
            <th>
        Html.DisplayNameFor(model => model.Overview)
            </th>
            -->
            <th>
                @Html.DisplayNameFor(model => model.Tagline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RunTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <!--
            <th>
                Html.DisplayNameFor(model => model.Actors)
            </th>
            -->
            <th>
                @Html.DisplayNameFor(model => model.MPAARating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre.GenreName)
            </th>
            <th>
                Average Review Rating
            </th>
            <th>
                See Reviews Here
            </th>
            <th>
                Find Showings Now!
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="table-secondary text-center text-dark">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <!--
            <td>
                Html.DisplayFor(modelItem => item.Overview)
            </td>
            -->
            <td>
                @Html.DisplayFor(modelItem => item.Tagline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RunTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <!--
            <td>
                Html.DisplayFor(modelItem => item.Actors)
            </td>
            --->
            <td>
                @Html.DisplayFor(modelItem => item.MPAARating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageReviewRating)
            </td>
            <td>
                @Html.ActionLink("Index", "MovieReview", new { id = item.MovieID }, new { style = "color:red" })
            </td>
            <td>
                @Html.ActionLink("Showing Times", "Details", new { id = item.MovieID }, new { style = "color:red" })
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Browse" style="color:white">Back to Search</a>
</div>

