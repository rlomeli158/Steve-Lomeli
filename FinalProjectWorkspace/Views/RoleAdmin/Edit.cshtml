@model RoleEditModel
@{
    ViewBag.Title = "Edit Role";
}

    <br />
<h1 class="text-center text-danger">Edit Role: @Model.Role.Name</h1>
<hr style="height:2px;border-width:0;color:#d0faff;background-color:#d0faff">
<br />

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <div class="panel panel-primary">
        <div class="panel-heading">Add To @Model.Role.Name</div>
        <table class="table table-striped">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr>
                    <td colspan="3">All Users Are Members</td>
                </tr>
            }
            else
            {
                <tr>
                    <!--TODO: Add additional user fields here-->
                    <!--First name is included as an example-->
                    <th>First Name</th>
                    <th>Middle Initial</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Add to Role</th>
                </tr>
                foreach (AppUser user in Model.NonMembers)
                {
                    <tr>
                        <!--TODO: Add additional fields here-->
                        <!--FirstName is included as an example-->
                        <td>@user.FirstName</td>
                        <td>@user.MiddleInitial</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@user.Id" />

                            @Html.ActionLink("Edit", "EditAccount", "Account", new { id = user.Id }, new { @class = "btn btn-outline-primary" })
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">Remove from @Model.Role.Name</div>
        <table class="table table-striped">
            @if (Model.Members.Count() == 0)
            {
                <tr>
                    <td colspan="3">No Users Are Members</td>
                </tr>
            }
            else
            {
                <tr>
                    <!--TODO: Add additional user fields here-->
                    <!--First name is included as an example-->
                    <th>First Name</th>
                    <th>Middle Initial</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Remove From Role</th>
                </tr>
                foreach (AppUser user in Model.Members)
                {
                    <tr>
                        <!--TODO: Add additional fields here-->
                        <!--FirstName is included as an example-->
                        <td>@user.FirstName</td>
                        <td>@user.MiddleInitial</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            <input type="checkbox" name="IdsToRemove" value="@user.Id" />

                            @Html.ActionLink("Edit", "EditAccount", "Account", new { id = user.Id }, new { @class = "btn btn-outline-primary" })
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <button type="submit" class="btn btn-outline-danger">Save</button>
    <a asp-action="Index" class="btn btn-outline-success">Cancel</a>
}